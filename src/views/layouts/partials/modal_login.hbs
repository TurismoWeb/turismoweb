<form method="POST" action="/validarusuariopost">
    <div class="modal fade" id="modalSubscriptionForm-login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Iniciar Sesión</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body mx-3 col-22">
                    <div class="md-form mb-4">
                        <input type="text" name="usuario" class="form-control validate" placeholder="E-mail - Usuario">
                    </div>
                    <div class="md-form mb-4">
                        <input type="password" name="contrasena" class="form-control validate" placeholder="Contraseña">
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <input type="submit" class="btn1" value="Iniciar Sesión" />
                </div>

            </div>
        </div>
    </div>
</form>